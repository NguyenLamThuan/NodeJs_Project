<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>update user</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload file</a>

    </div>

    <div class="update-user-container">
        <div>
            <h1>Update user</h1>
        </div>
        <form action="/update-user" method="post">
            <div>
                <label>First Name</label>
                <input type="text" name="firstName" value="<%= dataUser.firstName %>" />
            </div>
            <div>
                <label>Last Name</label>
                <input type="text" name="lastName" value="<%= dataUser.lastName %>" />
            </div>
            <div>
                <label>email</label>
                <input type="email" name="email" value="<%= dataUser.email %>" />
            </div>
            <div>
                <label>address</label>
                <input type="text" name="address" value="<%= dataUser.address %>" />
            </div>
            <div>
                <input type="text" name="id" value="<%= dataUser.id %>" hidden />
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>

    </div>

</body>

</html>